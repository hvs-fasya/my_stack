<h1>New Question</h1>

<%= form_for @question do |f| %>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :body, 'Text' %>
		<%= f.text_field :body %>
	</p>
	<p>Attachments:</p>
	<p>
		<%= f.fields_for :attachmments do |a| %>
			<%= a.label :file %>
			<%= a.file_field :file %>
		<% end %>
	</p>
	<p>
		<%= f.submit 'Create' %>
	</p>
<% end %>